{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pesa-playground",
  "version": "0.1.0",
  "identifier": "net.omenta.pesaplayground",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../../web/build"
  },
  "app": {
    "windows": [
      {
        "title": "pesa-playground",
        "label": "main",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "splashscreen.html",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
