{
  "name": "pesa-playground",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "scripts": {
    "vite:web": "vite dev --mode web",
    "build:web": "vite build --mode web",
    "dev": "vite dev --mode tauri",
    "dev:backend": "nodemon --watch ../crates/pesa-axum/ --watch ../crates/pesa-core/ --watch ../crates/pesa-macros/ --ext rs,toml --exec \"cargo --color=always run --manifest-path ../crates/pesa-axum/Cargo.toml\"",
    "dev:web": "concurrently \"pnpm vite:web\" \"pnpm dev:backend\"",
    "build": "vite build --mode tauri",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "TAURI_APP_PATH=../crates/pesa-tauri/ tauri"
  },
  "license": "MIT",
  "dependencies": {
    "@dicebear/collection": "^9.2.4",
    "@dicebear/core": "^9.2.4",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "lucide-svelte": "^0.525.0",
    "mode-watcher": "^1.1.0",
    "paneforge": "^1.0.2",
    "svelte-markdown": "^0.4.1"
  },
  "devDependencies": {
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.544.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.16",
    "@tauri-apps/cli": "^2.9.2",
    "@types/node": "^24.10.0",
    "bits-ui": "^2.14.2",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "mdsvex": "^0.12.6",
    "nodemon": "^3.1.10",
    "svelte": "^5.43.2",
    "svelte-check": "^4.3.3",
    "svelte-sonner": "^1.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.6.3",
    "vaul-svelte": "1.0.0-next.7",
    "vite": "^6.4.1"
