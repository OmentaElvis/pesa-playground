		"dev:backend": "nodemon --watch ../crates/pesa-axum/ --watch ../crates/pesa-core/ --watch ../crates/pesa-macros/ --ext rs,toml --exec \"cargo --color=always run --manifest-path ../crates/pesa-axum/Cargo.toml\"",
